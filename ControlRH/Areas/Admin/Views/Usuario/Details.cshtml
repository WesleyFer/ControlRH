@model UsuarioViewModel

@{
    ViewData["Title"] = "Detalhes do Usuário";
}

<div class="card">
    <div class="card-header">
        Detalhes do Usuário 
    </div>
    <div class="card-body">
        <p><strong>Login:</strong> @Model.Cpf</p>

        <hr />
    </div>
    <div class="card-footer text-center">
        <a asp-area="Admin" asp-controller="Usuario" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-primary btn-custom">Editar</a>
        <a asp-area="Admin" asp-controller="Usuario" asp-action="Index" class="btn btn-sm btn-secondary btn-custom">Voltar</a>
    </div>
</div>